{
  "name": "bug-ball-blitz",
  "version": "1.22.3",
  "description": "A physics-based soccer game featuring insect athletes",
  "main": "index.html",
  "scripts": {
    "dev": "npx http-server -p 8000 -c-1",
    "build": "node build.js",
    "cap:init": "npx cap init",
    "cap:add": "npx cap add android",
    "cap:sync": "npm run build && npx cap sync",
    "cap:open": "npx cap open android",
    "cap:build": "npm run build && npx cap copy && npx cap sync",
    "android:build": "cd android && ./gradlew assembleDebug",
    "android:release": "cd android && ./gradlew bundleRelease"
  },
  "keywords": [
    "game",
    "soccer",
    "physics",
    "html5",
    "canvas"
  ],
  "author": "Bug Ball Blitz Team",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^5.5.1",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "@capacitor-community/admob": "^5.1.0",
    "@capacitor/android": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.7.8"
  }
}
